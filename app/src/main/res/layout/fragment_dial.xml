        <ImageButton
            android:id="@+id/button_call"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="Call"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayoutDigits"
            android:src="@drawable/phone_symbol"
            android:scaleType="fitCenter"
            android:background="@drawable/call_button"
            android:padding="10dp"
            />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayoutDigits"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            app:columnCount="3"
            app:layout_constraintBottom_toTopOf="@+id/button_call"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            tools:layout_editor_absoluteX="10dp">

            <TextView
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialer_digit_button"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="1"
                android:textSize="36sp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialer_digit_button"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="2"
                android:textSize="36sp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialer_digit_button"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="3"
                android:textSize="36sp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialer_digit_button"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="4"
                android:textSize="36sp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialer_digit_button"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="5"
                android:textSize="36sp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialer_digit_button"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="6"
                android:textSize="36sp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialer_digit_button"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="7"
                android:textSize="36sp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialer_digit_button"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="8"
                android:textSize="36sp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialer_digit_button"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="9"
                android:textSize="36sp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/button_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialer_digit_button"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="+"
                android:textSize="36sp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialer_digit_button"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="0"
                android:textSize="36sp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/button_hash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialer_digit_button"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="#"
                android:textSize="36sp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

        </androidx.gridlayout.widget.GridLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridLayoutInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textViewInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/dialer_input"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    android:padding="8dp"
                    android:text="-"
                    android:textSize="36sp"
                    app:layout_columnWeight="6"
                    app:layout_gravity="fill"
                    android:maxLines="1"
                    android:inputType="text"/>

                <ImageView
                    android:id="@+id/imageButtonClear"
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    android:layout_margin="10dp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:srcCompat="@drawable/clear_symbol" />


            </androidx.gridlayout.widget.GridLayout>


            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/buttonSpeedDials1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/dialer_digit_button"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="M1"
                    android:textSize="20sp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <TextView
                    android:id="@+id/buttonSpeedDials2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/dialer_digit_button"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="M2"
                    android:textSize="20sp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <TextView
                    android:id="@+id/buttonSpeedDials3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/dialer_digit_button"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="M3"
                    android:textSize="20sp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

</layout>